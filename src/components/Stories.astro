<style>
    .container-fluid {
        background-color: #b21e4b;
        margin: 0;
        padding: 20px;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .slideshow-container {
    width: 100%;
    max-width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    padding: 20px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.review {
    display: flex;
    text-align: center;
}

.review p {
    color: white;
    font-size: 18px;
}

.review h4 {
    margin-top: 10px;
    color: white;
    font-family: "Playwrite IN", serif;
}

.fade {
    animation: fade 1.5s;
}

@keyframes fade {
    from {opacity: .4}
    to {opacity: 1}
}
</style>

<div class="container-fluid slideshow-container">
    <div class="review fade">
        <p>“This bread is amazing! I can't recommend it enough.”</p>
        <h4>- Jane Doe</h4>
    </div>
    <div class="review fade">
        <p>“Excellent service and great value for money.”</p>
        <h4>- John Smith</h4>
    </div>
    <div class="review fade">
        <p>“I am extremely satisfied with my purchase. A+!”</p>
        <h4>- Alex Johnson</h4>
    </div>
</div>

<script>
    let currentSlide = 0;
const slides = document.querySelectorAll('.review');

function showSlide(index) {
    slides.forEach((slide, i) => {
        slide.style.display = i === index ? 'block' : 'none';
    });
}

function nextSlide() {
    currentSlide = (currentSlide + 1) % slides.length;
    showSlide(currentSlide);
}

showSlide(currentSlide);
setInterval(nextSlide, 3000); // Change slide every 3 seconds

</script>